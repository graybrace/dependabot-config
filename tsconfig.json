{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "declaration": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true
  },
  "include": [
    "src/**/*"
  ]
}