{
  "name": "dependabot-config",
  "version": "0.0.1",
  "description": "Utilities for creating and managing Dependabot config files",
  "author": "Gray Brace",
  "homepage": "https://github.com/graybrace/dependabot-config",
  "jest-junit": {
    "outputDirectory": "reports",
    "outputName": "jest-junit.xml",
    "ancestorSeparator": " â€º ",
    "uniqueOutputName": "false",
    "suiteNameTemplate": "{filepath}",
    "classNameTemplate": "{classname}",
    "titleTemplate": "{title}"
  },
  "keywords": [
    "dependanbot"
  ],
  "license": "MIT",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://opensource.org/license/mit/"
    }
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/graybrace/dependabot-config.git"
  },
  "bugs": {
    "url": "https://github.com/graybrace/dependabot-config/issues"
  },
  "main": "dist/cli.js",
  "bin": {
    "depc": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "prebuild": "rimraf ./dist",
    "build": "tsc -p tsconfig.prod.json",
    "check:knip": "knip",
    "check:lint": "eslint .",
    "checks": "run-s check:*",
    "pretest": "rimraf ./coverage && rimraf ./reports",
    "test": "jest --config jest.config.cjs --no-cache"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-each": "^29.7.0",
    "jest-junit": "^16.0.0",
    "knip": "^5.0.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "minimatch": "^9.0.3",
    "yaml": "^2.3.4",
    "yargs": "^17.7.2"
  }
}
